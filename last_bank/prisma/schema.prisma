// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")

}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  firstName String
  lastName  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  incomes   Income[]
  bills     Bill[]
  profiles  Profile[]

}

model Income {
  id           String   @id @default(uuid())
  source       String
  description  String
  amount       Float
  payment_date DateTime
  received     Boolean  @default(false)
  user         User[]   @relation
  userId       String
}

model Bill {
  id          String     @id @default(uuid())
  source      String
  description String
  amount      Float
  due_date    DateTime
  recurring   Boolean    @default(true)
  paid        Boolean    @default(false)
  user        User[]     @relation
  userId      String
  categories  Category[] @relation
}

model Category {
  id    String @id @default(uuid())
  name  String
  bills Bill[] @relation
}

model Profile {
  id               String   @id @default(uuid())
  birthDay         DateTime
  currentLocation  String
  preferredPronoun String
  occupation       String
  user             User[]   @relation
  userId           String
}
